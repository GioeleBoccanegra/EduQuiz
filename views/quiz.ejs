<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="../assets/style.css">
</head>

<body>
  <h1>eduquiz</h1>

  <h2>rispondi alle seguenti domande:</h2>
  <form method="POST" action="/answers">
    <%questions.forEach(function (question) {%>
      <h3 for="question_<%= question.id %>">
        <%=question.domanda%>
      </h3>
      <%question.opzioni.forEach(function (opzione, index) {%>
        <label for="question_<%= question.id%>">
          <%=opzione%>
        </label>
        <input type="radio" name="question_<%= question.id %>" value="<%=index+1%>" required>
        <%})%>
          <%})%>
            <input type="submit" value="correggi">
  </form>
</body>

</html>